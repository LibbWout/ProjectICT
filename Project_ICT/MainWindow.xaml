<Window x:Class="Project_ICT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_ICT"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="15">
    <StackPanel Margin="10">
        <GroupBox Header="Selectie COM-poort">
            <ComboBox Height="35" Margin="20" Name="cbxCOMPoort" SelectionChanged="cbxCOMPoort_SelectionChanged"  ></ComboBox>
        </GroupBox>
        <GroupBox Header="Te vertalen tekst">

            <TextBox x:Name="tbxTekst" Height="30" Margin="20" IsEnabled="False"/>
        </GroupBox>
        <GroupBox Header="Morsecode" >
            <TextBlock Name="tbkMorseCode"  Margin="20" Height="30" IsEnabled="False" TextAlignment="Center" FontSize="30">

            </TextBlock>
        </GroupBox>
        <Button Height="49" Width="192" x:Name="btnVertaal" Click="btnVertaal_Click" IsEnabled="False" RenderTransformOrigin="0.521,0.536" Content="Vertaal naar morsecode."/>
        <Button Height="49" Width="196" Name="btnVerstuur" Click="btnVerstuur_Click" IsEnabled="False">Zet op lichtjes.</Button>


    </StackPanel>
</Window>
